@using EduHomeUI.ViewModels;
@model UserReplyVM


<form method="post" asp-controller="UserReplies" asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <p></p>
            <label asp-for="@Model.Name" class="p-0"></label>
            <input asp-for="@Model.Name">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <p></p>
            <label asp-for="@Model.Email" class="p-0"></label>
            <input asp-for="@Model.Email">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <p></p>
            <label asp-for="@Model.Subject" class="p-0"></label>
            <input asp-for="@Model.Subject">
            <span asp-validation-for="@Model.Subject" class="text-danger"></span>
            <p></p>
            <label asp-for="@Model.Message" class="p-0"></label>
            <textarea asp-for="@Model.Message"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="reply-btn" data-text="send">Send</button>
    <p class="form-messege"></p>
</form>

