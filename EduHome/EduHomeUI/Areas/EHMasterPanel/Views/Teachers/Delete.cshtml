@using EduHome.Core.Entities;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Teachers
<form asp-controller="Teachers" asp-action="Delete" method="post">
    <div class="row mb-4">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Position" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Position" class="form-control" readonly />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ImagePath" class="form-control" readonly />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div>
                <button type="submit" class="btn btn-danger w-md">Delete</button>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Teachers" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>

