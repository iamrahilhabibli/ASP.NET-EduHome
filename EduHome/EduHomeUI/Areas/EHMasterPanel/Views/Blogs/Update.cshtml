@using EduHome.Core.Entities;
@model Blogs
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="Blogs" asp-action="Update" method="post">
    <div class="row mb-4">
        <label asp-for="AuthorName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="AuthorName" class="form-control" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Date" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="CommentCount" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="CommentCount" class="form-control" disabled />
            <span asp-validation-for="CommentCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Title" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="BlogText" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="BlogText" class="form-control" />
            <span asp-validation-for="BlogText" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div class="mt-3">
                <button type="submit" class="btn btn-warning w-md">Update</button>
            </div>
        </div>
        <div class="col-6 col-md-3 mt-3">
            <a asp-controller="Blogs" asp-action="Index" class="btn btn-outline-primary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>

