@using EduHome.Core.Entities;
@model Blogs
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-controller="Blogs" asp-action="Delete" method="post">
    <div class="row mb-4">
        <label asp-for="AuthorName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="AuthorName" disabled class="form-control" />
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Title" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Title" disabled class="form-control" />
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="BlogText" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="BlogText" disabled class="form-control" />
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ImagePath" disabled class="form-control" />
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div>
                <button type="submit" class="btn btn-danger w-md">Delete</button>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Blogs" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>
