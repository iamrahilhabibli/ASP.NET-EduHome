@using EduHomeUI.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EventsViewModel

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Event Create Form</h4>
            <form asp-controller="Events" asp-action="Create" method="post">
                <div class="row mb-4">
                    <label asp-for="Title" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Date" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="StartTime" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="StartTime" type="time" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="EndTime" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="EndTime" type="time" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Location" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Venue" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Venue" class="form-control" />
                        <span asp-validation-for="Venue" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Speakers" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <select asp-for="Speakers" asp-items="@GetSpeakerSelectList()" class="form-control" multiple></select>
                        <span asp-validation-for="Speakers" class="text-danger"></span>
                    </div>
                </div>

                <div class="row justify-content-end">
                    <div class="col-sm-9">
                        <div>
                            <button type="submit" class="btn btn-primary w-md">Submit</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <!-- end card body -->
    </div>
    <!-- end card -->
</div>
