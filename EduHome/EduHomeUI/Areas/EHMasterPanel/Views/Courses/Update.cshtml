@using EduHomeUI.ViewModels;
@model CoursesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="Courses" asp-action="Update" method="post">
    <div class="row mb-4">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ImagePath" class="form-control" />
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="StartDate" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Duration" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="SkillLevel" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="SkillLevel" class="form-control" />
            <span asp-validation-for="SkillLevel" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Language" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Language" class="form-control" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="StudentCount" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="StudentCount" class="form-control" />
            <span asp-validation-for="StudentCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Assesment" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Assesment" class="form-control" />
            <span asp-validation-for="Assesment" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Fee" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Fee" class="form-control" />
            <span asp-validation-for="Fee" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div class="mt-3">
                <button type="submit" class="btn btn-warning w-md">Update</button>
            </div>
        </div>
        <div class="col-6 col-md-3 mt-3">
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>
