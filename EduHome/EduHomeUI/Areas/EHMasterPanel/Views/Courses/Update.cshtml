@using EduHome.Core.Entities
@model Courses
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="Courses" asp-action="Update" method="post">
    <div class="row mb-4">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="ImagePath"  class="form-control" />
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-9">
            <div class="mt-3">
                <button type="submit" class="btn btn-warning w-md">Update</button>
            </div>
        </div>
        <div class="col-6 col-md-3 mt-3">
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary border form-control">
                Back to list
            </a>
        </div>
    </div>

</form>
