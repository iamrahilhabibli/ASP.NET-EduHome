@using EduHomeUI.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TestimonialsViewModel
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Testimonials Create Form</h4>
            <form asp-controller="Testimonials" asp-action="Create" method="post">
               @Html.AntiForgeryToken()
                <div class="row mb-4">
                    <label asp-for="SelectedCourseName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.SelectedCourseName, Model.AvailableCourses, "Select a Course", new { @class = "form-control" })
                        <span asp-validation-for="SelectedCourseName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Surname" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="ImagePath" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-4">
                    <label asp-for="Occupation" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Occupation" class="form-control" />
                        <span asp-validation-for="Occupation" class="text-danger"></span>
                    </div>
                </div>

                <div class="row justify-content-end">
                    <div class="col-sm-9">
                        <div>
                            <button type="submit" class="btn btn-primary w-md">Submit</button>
                        </div>
                    </div>
                </div>
            </form>


        </div>
        <!-- end card body -->
    </div>
    <!-- end card -->
</div>