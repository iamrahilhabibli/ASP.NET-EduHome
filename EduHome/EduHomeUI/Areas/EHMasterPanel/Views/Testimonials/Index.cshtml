@using EduHome.Core.Entities;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Testimonials>
<partial name="_Notification" />
@{
	ViewData["Title"] = "Index";
	int count = 1;
}
<div class="container-fluid">

	<!-- start page title -->
	<div class="row">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Sliders</h4>
				<a asp-controller="Testimonials" asp-action="Create"  class="btn btn-primary mb-4">Create New Testimonial</a>
				<div class="table-responsive">
					<table class="table table-dark mb-0">

						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Surname</th>
								<th>ImagePath</th>
								<th>Description</th>
								<th>Occupation</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var testimonial in Model)
							{
								<tr>
									<th scope="row">@count</th>
									<td>@testimonial.Name</td>
									<td>@testimonial.Surname</td>
									<td> <img src="/@testimonial.ImagePath" style="width:100px" /> </td>
									<td>@testimonial.Description</td>
									<td>@testimonial.Occupation, @testimonial.Courses.Name</td>
									<td>
										<a  class="btn btn-warning mb-4">	<i class="bi bi-pencil-square"></i></a>
										<a  class="btn btn-danger mb-4"><i class="bi bi-trash-fill"></i></a>
									</td>
								</tr>
								count++;
							}

						</tbody>
					</table>
				</div>

			</div>
		</div>
	</div>
</div>